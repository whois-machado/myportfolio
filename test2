import React, { useEffect, useState } from 'react';
import { motion, useScroll, useTransform } from 'framer-motion';
import { ChevronDown, Mail, Github, Linkedin, Code, Brain, Shield, Database, Globe, Cpu } from 'lucide-react';
import { Button } from '@/components/ui/button';
import { Card, CardContent } from '@/components/ui/card';

export default function Portfolio() {
  const [activeSection, setActiveSection] = useState('hero');
  const { scrollYProgress } = useScroll();
  const y = useTransform(scrollYProgress, [0, 1], ['0%', '50%']);

  useEffect(() => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            setActiveSection(entry.target.id);
          }
        });
      },
      { threshold: 0.4 }
    );

    document.querySelectorAll('section[id]').forEach((section) => {
      observer.observe(section);
    });

    return () => observer.disconnect();
  }, []);

  const scrollToSection = (sectionId) => {
    document.getElementById(sectionId)?.scrollIntoView({
      behavior: 'smooth',
      block: 'start'
    });
  };

  const containerVariants = {
    hidden: { opacity: 0 },
    visible: {
      opacity: 1,
      transition: {
        staggerChildren: 0.3,
        delayChildren: 0.2
      }
    }
  };

  const itemVariants = {
    hidden: { y: 50, opacity: 0 },
    visible: {
      y: 0,
      opacity: 1,
      transition: {
        type: "spring",
        stiffness: 100,
        damping: 15
      }
    }
  };

  return (
    <div className="bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 text-white min-h-screen font-['Poppins'] overflow-x-hidden">
      {/* Floating Background Elements */}
      <div className="fixed inset-0 overflow-hidden pointer-events-none">
        <motion.div
          animate={{
            x: [0, 100, 0],
            y: [0, -100, 0],
          }}
          transition={{
            duration: 20,
            repeat: Infinity,
            ease: "linear"
          }}
          className="absolute top-20 left-10 w-72 h-72 bg-blue-500/5 rounded-full blur-3xl"
        />
        <motion.div
          animate={{
            x: [0, -150, 0],
            y: [0, 100, 0],
          }}
          transition={{
            duration: 25,
            repeat: Infinity,
            ease: "linear"
          }}
          className="absolute bottom-20 right-10 w-96 h-96 bg-cyan-400/5 rounded-full blur-3xl"
        />
      </div>

      {/* Navigation Header */}
      <motion.header 
        initial={{ y: -100, opacity: 0 }}
        animate={{ y: 0, opacity: 1 }}
        transition={{ duration: 1, ease: "easeOut" }}
        className="fixed top-0 w-full z-50 backdrop-blur-xl bg-slate-950/70 border-b border-slate-700/50"
      >
        <nav className="container mx-auto px-6 py-4">
          <div className="flex justify-between items-center">
            <motion.div 
              whileHover={{ scale: 1.05 }}
              className="text-2xl font-bold"
            >
              <span className="bg-gradient-to-r from-blue-400 via-cyan-400 to-blue-500 bg-clip-text text-transparent">
                {"< Dev />"}
              </span>
            </motion.div>
            
            <div className="hidden md:flex items-center space-x-8">
              {[
                { id: 'hero', label: 'Início' },
                { id: 'about', label: 'Sobre' },
                { id: 'projects', label: 'Projetos' },
                { id: 'contact', label: 'Contato' }
              ].map((item) => (
                <motion.button
                  key={item.id}
                  whileHover={{ y: -2 }}
                  onClick={() => scrollToSection(item.id)}
                  className={`relative py-2 px-4 font-medium transition-all duration-300 ${
                    activeSection === item.id 
                      ? 'text-blue-400' 
                      : 'text-gray-400 hover:text-white'
                  }`}
                >
                  {item.label}
                  {activeSection === item.id && (
                    <motion.div
                      layoutId="activeIndicator"
                      className="absolute -bottom-1 left-0 right-0 h-0.5 bg-gradient-to-r from-blue-400 to-cyan-400 rounded-full"
                      initial={false}
                      transition={{ type: "spring", stiffness: 400, damping: 30 }}
                    />
                  )}
                </motion.button>
              ))}
            </div>
          </div>
        </nav>
      </motion.header>

      {/* Hero Section */}
      <section id="hero" className="min-h-screen flex items-center justify-center px-6 relative">
        <motion.div 
          style={{ y }}
          className="container mx-auto text-center relative z-10"
        >
          {/* Profile Image Placeholder */}
          <motion.div
            initial={{ scale: 0, rotate: -180 }}
            animate={{ scale: 1, rotate: 0 }}
            transition={{ 
              type: "spring", 
              stiffness: 200, 
              damping: 15,
              delay: 0.5 
            }}
            className="relative w-56 h-56 mx-auto mb-12"
          >
            <div className="absolute inset-0 bg-gradient-to-r from-blue-500 via-cyan-400 to-blue-600 rounded-full blur-xl opacity-30 animate-pulse" />
            <div className="relative w-full h-full bg-gradient-to-br from-slate-800 to-slate-700 rounded-full border-4 border-blue-400/20 flex items-center justify-center shadow-2xl shadow-blue-500/20">
              <div className="w-32 h-32 bg-gradient-to-br from-blue-400/20 to-cyan-400/20 rounded-full flex items-center justify-center">
                <Code className="w-16 h-16 text-blue-400" />
              </div>
            </div>
          </motion.div>

          <motion.div
            variants={containerVariants}
            initial="hidden"
            animate="visible"
            className="space-y-8"
          >
            <motion.h1 
              variants={itemVariants}
              className="text-6xl md:text-8xl font-black mb-6 leading-none"
            >
              <span className="block text-white/90">Olá, sou</span>
              <span className="block bg-gradient-to-r from-blue-400 via-cyan-400 to-blue-500 bg-clip-text text-transparent">
                Desenvolvedor
              </span>
            </motion.h1>

            <motion.p 
              variants={itemVariants}
              className="text-xl md:text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed font-light"
            >
              Graduando em <span className="text-blue-400 font-medium">Ciência da Computação</span> pela UFRRJ.
              <br />
              Especializado em desenvolvimento web e apaixonado por tecnologias emergentes como
              <br />
              <span className="text-cyan-400 font-medium">IA</span>, 
              <span className="text-blue-400 font-medium"> Blockchain</span> e 
              <span className="text-purple-400 font-medium"> Cibersegurança</span>.
            </motion.p>

            <motion.div
              variants={itemVariants}
              className="flex flex-col sm:flex-row gap-6 justify-center pt-8"
            >
              <motion.div whileHover={{ scale: 1.05 }} whileTap={{ scale: 0.95 }}>
                <Button 
                  onClick={() => scrollToSection('projects')}
                  className="bg-gradient-to-r from-blue-600 to-cyan-500 hover:from-blue-700 hover:to-cyan-600 text-white px-10 py-4 text-lg font-semibold rounded-2xl shadow-lg shadow-blue-500/25 transition-all duration-300 border-0"
                >
                  Ver Projetos
                </Button>
              </motion.div>
              
              <motion.div whileHover={{ scale: 1.05 }} whileTap={{ scale: 0.95 }}>
                <Button 
                  onClick={() => scrollToSection('contact')}
                  variant="outline" 
                  className="border-2 border-cyan-400/50 text-cyan-400 hover:bg-cyan-400 hover:text-slate-900 px-10 py-4 text-lg font-semibold rounded-2xl backdrop-blur-sm bg-white/5 transition-all duration-300"
                >
                  Contato
                </Button>
              </motion.div>
            </motion.div>
          </motion.div>

          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            transition={{ delay: 1.5 }}
            className="absolute bottom-8 left-1/2 transform -translate-x-1/2"
          >
            <motion.div
              animate={{ y: [0, 12, 0] }}
              transition={{ duration: 2, repeat: Infinity, ease: "easeInOut" }}
              className="cursor-pointer"
              onClick={() => scrollToSection('about')}
            >
              <ChevronDown className="w-8 h-8 text-blue-400/70" />
            </motion.div>
          </motion.div>
        </motion.div>
      </section>

      {/* About Section */}
      <section id="about" className="py-32 px-6 relative">
        <div className="container mx-auto">
          <motion.div
            initial={{ opacity: 0, y: 100 }}
            whileInView={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.8 }}
            viewport={{ once: true, margin: "-200px" }}
          >
            <h2 className="text-5xl md:text-6xl font-bold text-center mb-20">
              <span className="bg-gradient-to-r from-white via-gray-200 to-gray-400 bg-clip-text text-transparent">
                Sobre Mim
              </span>
            </h2>

            <div className="grid lg:grid-cols-2 gap-16 items-center">
              <motion.div 
                initial={{ opacity: 0, x: -50 }}
                whileInView={{ opacity: 1, x: 0 }}
                transition={{ duration: 0.8, delay: 0.2 }}
                viewport={{ once: true }}
                className="space-y-8"
              >
                <div className="text-lg text-gray-300 leading-relaxed space-y-6">
                  <p>
                    Como estudante de <span className="text-blue-400 font-semibold">Ciência da Computação na UFRRJ</span>, 
                    estou constantemente explorando as fronteiras da tecnologia e buscando maneiras inovadoras 
                    de resolver problemas complexos.
                  </p>
                  <p>
                    Minha jornada no <span className="text-cyan-400 font-semibold">desenvolvimento web</span> começou 
                    com a curiosidade de entender como as coisas funcionam nos bastidores da internet. 
                    Hoje, transformo ideias em experiências digitais memoráveis.
                  </p>
                  <p>
                    Sou fascinado pelas possibilidades que tecnologias emergentes como 
                    <span className="text-purple-400 font-semibold"> Inteligência Artificial</span>, 
                    <span className="text-blue-400 font-semibold"> Blockchain</span> e 
                    <span className="text-red-400 font-semibold"> Cibersegurança</span> oferecem 
                    para moldar o futuro digital.
                  </p>
                </div>
              </motion.div>

              <motion.div 
                initial={{ opacity: 0, x: 50 }}
                whileInView={{ opacity: 1, x: 0 }}
                transition={{ duration: 0.8, delay: 0.4 }}
                viewport={{ once: true }}
                className="grid grid-cols-1 gap-6"
              >
                {[
                  { 
                    icon: Brain, 
                    title: "Inteligência Artificial", 
                    desc: "Machine Learning, Deep Learning e processamento de linguagem natural",
                    color: "from-purple-500 to-pink-500"
                  },
                  { 
                    icon: Globe, 
                    title: "Desenvolvimento Web", 
                    desc: "Frontend moderno e backend escalável com as melhores práticas",
                    color: "from-blue-500 to-cyan-500"
                  },
                  { 
                    icon: Shield, 
                    title: "Cibersegurança", 
                    desc: "Proteção digital, ethical hacking e análise de vulnerabilidades",
                    color: "from-red-500 to-orange-500"
                  },
                  { 
                    icon: Database, 
                    title: "Blockchain", 
                    desc: "Smart contracts, DApps e tecnologias descentralizadas",
                    color: "from-green-500 to-teal-500"
                  }
                ].map((skill, index) => (
                  <motion.div
                    key={index}
                    whileHover={{ scale: 1.02, x: 8 }}
                    className="group p-6 rounded-2xl bg-gradient-to-br from-slate-800/40 to-slate-700/20 border border-slate-600/20 backdrop-blur-sm"
                  >
                    <div className="flex items-start space-x-4">
                      <div className={`p-3 rounded-xl bg-gradient-to-br ${skill.color} bg-opacity-20`}>
                        <skill.icon className="w-8 h-8 text-white" />
                      </div>
                      <div className="flex-1">
                        <h3 className="text-xl font-bold text-white group-hover:text-blue-400 transition-colors duration-300">
                          {skill.title}
                        </h3>
                        <p className="text-gray-400 mt-2 leading-relaxed">
                          {skill.desc}
                        </p>
                      </div>
                    </div>
                  </motion.div>
                ))}
              </motion.div>
            </div>
          </motion.div>
        </div>
      </section>

      {/* Projects Section */}
      <section id="projects" className="py-32 px-6 bg-gradient-to-b from-slate-950/50 to-slate-900/30">
        <div className="container mx-auto">
          <motion.div
            initial={{ opacity: 0, y: 50 }}
            whileInView={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.8 }}
            viewport={{ once: true, margin: "-100px" }}
          >
            <h2 className="text-5xl md:text-6xl font-bold text-center mb-20">
              <span className="bg-gradient-to-r from-white via-gray-200 to-gray-400 bg-clip-text text-transparent">
                Projetos
              </span>
            </h2>

            <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {Array.from({ length: 6 }, (_, i) => i + 1).map((projectNum) => (
                <motion.div
                  key={projectNum}
                  initial={{ opacity: 0, y: 50 }}
                  whileInView={{ opacity: 1, y: 0 }}
                  transition={{ duration: 0.6, delay: projectNum * 0.1 }}
                  viewport={{ once: true }}
                  whileHover={{ y: -8 }}
                  className="group"
                >
                  <Card className="bg-gradient-to-br from-slate-800/60 to-slate-900/40 border-slate-600/30 backdrop-blur-sm overflow-hidden h-full transition-all duration-500 group-hover:border-blue-400/50 group-hover:shadow-2xl group-hover:shadow-blue-500/10">
                    <CardContent className="p-0">
                      <div className="relative h-48 bg-gradient-to-br from-slate-700 to-slate-800 flex items-center justify-center overflow-hidden">
                        <motion.div
                          whileHover={{ scale: 1.1, rotate: 5 }}
                          className="relative z-10"
                        >
                          <Cpu className="w-20 h-20 text-slate-500 group-hover:text-blue-400 transition-all duration-500" />
                        </motion.div>
                        <div className="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                      </div>
                      
                      <div className="p-6 space-y-4">
                        <h3 className="text-xl font-bold text-white group-hover:text-blue-400 transition-colors duration-300">
                          Projeto Inovador #{projectNum}
                        </h3>
                        
                        <p className="text-gray-400 leading-relaxed">
                          Este espaço será preenchido com projetos que demonstram minhas habilidades 
                          em desenvolvimento full-stack e tecnologias emergentes.
                        </p>
                        
                        <div className="flex flex-wrap gap-2 pt-2">
                          {['React', 'Node.js', 'TypeScript'].map((tech, index) => (
                            <span 
                              key={tech} 
                              className={`px-3 py-1 text-xs rounded-full font-medium ${
                                index === 0 ? 'bg-blue-500/20 text-blue-300' :
                                index === 1 ? 'bg-green-500/20 text-green-300' :
                                'bg-purple-500/20 text-purple-300'
                              }`}
                            >
                              {tech}
                            </span>
                          ))}
                        </div>
                        
                        <motion.button
                          whileHover={{ scale: 1.05 }}
                          whileTap={{ scale: 0.95 }}
                          className="w-full mt-6 py-3 bg-gradient-to-r from-blue-600/80 to-cyan-500/80 hover:from-blue-600 hover:to-cyan-500 text-white rounded-xl font-medium transition-all duration-300 opacity-50 cursor-not-allowed"
                          disabled
                        >
                          Em Breve
                        </motion.button>
                      </div>
                    </CardContent>
                  </Card>
                </motion.div>
              ))}
            </div>
          </motion.div>
        </div>
      </section>

      {/* Contact Section */}
      <section id="contact" className="py-32 px-6">
        <div className="container mx-auto">
          <motion.div
            initial={{ opacity: 0, y: 50 }}
            whileInView={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.8 }}
            viewport={{ once: true, margin: "-100px" }}
            className="text-center max-w-4xl mx-auto"
          >
            <h2 className="text-5xl md:text-6xl font-bold mb-12">
              <span className="bg-gradient-to-r from-white via-gray-200 to-gray-400 bg-clip-text text-transparent">
                Vamos Conversar
              </span>
            </h2>

            <motion.p 
              initial={{ opacity: 0, y: 30 }}
              whileInView={{ opacity: 1, y: 0 }}
              transition={{ duration: 0.8, delay: 0.2 }}
              viewport={{ once: true }}
              className="text-xl text-gray-300 mb-16 leading-relaxed font-light max-w-3xl mx-auto"
            >
              Estou sempre aberto a novas oportunidades e projetos interessantes. 
              Se você tem uma ideia inovadora ou precisa de um desenvolvedor apaixonado 
              por tecnologia, vamos trabalhar juntos!
            </motion.p>

            <motion.div 
              initial={{ opacity: 0, y: 30 }}
              whileInView={{ opacity: 1, y: 0 }}
              transition={{ duration: 0.8, delay: 0.4 }}
              viewport={{ once: true }}
              className="mb-16"
            >
              <motion.a
                href="mailto:seuemail@exemplo.com"
                whileHover={{ scale: 1.05 }}
                whileTap={{ scale: 0.95 }}
                className="inline-flex items-center space-x-4 bg-gradient-to-r from-blue-600 to-cyan-500 hover:from-blue-700 hover:to-cyan-600 text-white px-12 py-5 rounded-2xl font-semibold text-lg transition-all duration-300 shadow-lg shadow-blue-500/25"
              >
                <Mail className="w-6 h-6" />
                <span>Enviar E-mail</span>
              </motion.a>
            </motion.div>

            <motion.div 
              initial={{ opacity: 0 }}
              whileInView={{ opacity: 1 }}
              transition={{ duration: 0.8, delay: 0.6 }}
              viewport={{ once: true }}
              className="flex justify-center space-x-8"
            >
              {[
                { 
                  icon: Github, 
                  url: "https://github.com", 
                  label: "GitHub",
                  color: "hover:text-gray-300"
                },
                { 
                  icon: Linkedin, 
                  url: "https://linkedin.com", 
                  label: "LinkedIn",
                  color: "hover:text-blue-400"
                }
              ].map((social) => (
                <motion.a
                  key={social.label}
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  whileHover={{ scale: 1.15, y: -8 }}
                  whileTap={{ scale: 0.95 }}
                  className={`p-6 bg-slate-800/40 rounded-2xl border border-slate-600/30 text-gray-400 ${social.color} transition-all duration-300 backdrop-blur-sm group`}
                >
                  <social.icon className="w-10 h-10 group-hover:drop-shadow-lg" />
                </motion.a>
              ))}
            </motion.div>
          </motion.div>
        </div>
      </section>

      {/* Footer */}
      <motion.footer 
        initial={{ opacity: 0 }}
        whileInView={{ opacity: 1 }}
        transition={{ duration: 0.8 }}
        className="border-t border-slate-800/50 py-12 px-6 text-center backdrop-blur-sm"
      >
        <div className="container mx-auto">
          <p className="text-gray-400 text-lg">
            Desenvolvido com <span className="text-red-400">❤️</span> e muito 
            <span className="text-blue-400 font-medium"> código</span>
          </p>
          <p className="text-gray-500 mt-2">
            © 2024 - Todos os direitos reservados
          </p>
        </div>
      </motion.footer>
    </div>
  );
}